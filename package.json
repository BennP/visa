{
  "name": "Visa",
  "version": "0.0.4",
  "license": "MIT",
  "repository" :
  { "type" : "git"
  , "url" : "https://github.com/BennP/visa.git"
  },
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron app/.",
    "pack": "build --dir",
    "dist": "build",
    "dist-win-64": "build --win --x64",
    "dist-win-32": "build --win --ia32"
  },
  "devDependencies": {
    "electron": "^1.3.4",
    "electron-builder": "next"
  },
  "build": {
    "appId": "se.porscke.visa",
    "category": "public.app-category.tool",
    "files": [
      "main.js",
      "index.js",
      "index.html",
      "urls.js",
      "app-settings.js",
      "images/moon.jpg",
      "images/mars.jpg"
    ],
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
